{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row d-flex justify-content-center">
        <div class="col-10 ">
            {{ form(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            {% if results is null %}
                Make a search !
            {% elseif results is empty %}
                No results !
            {% else %}
                {# Handle results here ! #}
                {% if results[0] is isfarmer() %}
                    {# Si c'est des fermiers pas les mÃªmes champs #}
                    <div class="row farmers">

                        <!-- DYNAMIC OBJECT: foreach farmer in farmers -->
                        {# @var farmer \AppBundle\Entity\Owner #}
                        {% for farmer in results %}
                        <!-- BEGIN -->

                            <div class="col-sm-6 col-lg-3 ">
                                <div class="row">
                                    <!-- src of the image = farmer.getImg() -->
                                    <div class="col-sm-11 offset-sm-1 farmer" style="background-image: url({{ asset(farmer.image) }})">
                                        <!-- h2.innerHTML = farmer.getName() -->
                                        <h2><span class="white-bg-farmer">{{ farmer.name|upper }}</span></h2>
                                        <!-- a.href = farmer.getName() + -->
                                        <a class="btn btn-success" href="{{ path('profile_details', {"id": farmer.id}) }}"><i class="fa fa-user"></i>Profile</a>
                                        <!-- a.href = farmer.getEmail() -->
                                        <a class="btn btn-info" href="mailto:{{ farmer.email }}"><i class="fa fa-envelope"></i>E-mail</a>
                                    </div>
                                </div>
                            </div>

                        <!-- END -->
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="container navrecipes">
                        <div class="row card-deck">
                            {# @var recipe \AppBundle\Entity\Recipe #}
                            {% for recipe in results %}
                                <!-- BEGIN -->
                                <div class="col-lg-4 col-md-6 offset-sm-2 offset-md-0 col-xs-6 offset-xs-3 text-center">
                                    <div class="card recipe-card">
                                        <!-- img.href = recipe.getImage() -->
                                        <a href="{{ path('explore_recipe_details', {"id": recipe.author.id}) }}">
                                            <img class="card-img-top" src="{{ asset(recipe.image) }}" alt="Chipotle Pulled Chicken Sandwiches">
                                        </a>
                                        <div class="card-body">
                                            <!-- h5.innerHTML = recipe.getTitle() -->
                                            <h5 class="card-title">{{ recipe.title }}</h5>
                                            <!-- p.innerHTML = recipe.getDescription() -->
                                            <p class="card-text text-justify">{{ recipe.description }}</p>
                                            {% if app.user == recipe.author %}
                                                <button type="button" class="btn btn-secondary">Modify</button>
                                                <button type="button" class="btn btn-danger">Delete</button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- END -->
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}