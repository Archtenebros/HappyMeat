{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Beginning of main content -->

    <div class="container navrecipes">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-center">
                    <h1 class="main-title"> <span class="title">The recipes</span></h1>
                    <p class="submenu">
                        <a href="#recipe1">Recipe 1</a> -
                        <a href="#recipe2">Recipe 2</a> -
                        <a href="#recipe3">Recipe 3</a> -
                        <a href="#recipe4">Recipe 4</a> -
                        <a class="txt-info" href="#newrecipe"><i class="fa fa-plus"></i>New recipe</a>
                    </p>
                </div>
            </div>
        </div>




        <div class="row card-deck">

            <!-- DYNAMIC OBJECT: foreach recipe in allRecipes -->
            {% for recipe in recipes %}
            <!-- BEGIN -->
            <div class="col-lg-4 col-md-6 offset-sm-2 offset-md-0 col-xs-6 offset-xs-3 text-center">
                <div class="card recipe-card">
                    <!-- img.href = recipe.getImage() -->
                    <a href="{{ path('explore_recipe_details', {"id": recipe.author.id}) }}">
                    <img class="card-img-top" src="{{ asset(recipe.image) }}" alt="Chipotle Pulled Chicken Sandwiches">
                    </a>
                    <div class="card-body">
                        <!-- h5.innerHTML = recipe.getTitle() -->
                        <h5 class="card-title">{{ recipe.title }}</h5>
                        <!-- p.innerHTML = recipe.getDescription() -->
                        <p class="card-text text-justify">{{ recipe.description }}</p>
                        {% if app.user == recipe.author %}
                            <button type="button" class="btn btn-secondary">Modify</button>
                            <button type="button" class="btn btn-danger">Delete</button>
                        {% endif %}
                    </div>
                </div>
            </div>
            <!-- END -->
            {% endfor %}

        </div>

    </div>

    <!-- end of the main content -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}