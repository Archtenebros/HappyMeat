{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <!-- Beginning of main content -->

    <div class="row">
        <div class="col-md-12">
            <div id="carouselhappy" class="carousel slide home-carousel" data-ride="carousel">


                <ol class="carousel-indicators">
                    <li data-target="#carouselhappy" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselhappy" data-slide-to="1"></li>
                    <li data-target="#carouselhappy" data-slide-to="2"></li>
                    <li data-target="#carouselhappy" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="assets/img/carousel1.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-block home-carousel-caption">
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="assets/img/carousel2.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-block home-carousel-caption">
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="assets/img/carousel3.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-block home-carousel-caption">
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100" src="assets/img/carousel4.jpg" alt="Fourth slide">
                        <div class="carousel-caption d-none d-block home-carousel-caption">
                        </div>
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselhappy" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselhappy" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="main-text hidden-xs">
                <div class="container">

                    <div class="col-md-8 offset-md-2">
                        <div class=" text-center carousel-info-background">
                            <h1 class="title">Meet Happy Meat</h1>
                            <h1 class="title-little text-success">Organic, fair & local</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


    <div class="jumbotron">
        <div class="container">
            <h1 class="title">What we stand for</h1>
            <h4 class="font-NewCycle">Meet Happy Meat is the first transaction and communication platform to link food lovers and fair farmers in an easy and transparent way.
                We stand for transparency and fairness.<br><br>
                We enable the future of organic online shopping.</h4>
        </div>
    </div>

    <div class="container">
        <div class="row card-deck">

            <div class="col-lg-4 col-md-6 offset-sm-2 offset-md-0 col-xs-6 offset-xs-3 text-center">
                <a href="{{ path('blog') }}">
                    <div class="card recipe-card">
                        <img class="card-img-top" src="{{ asset('assets/img/jumbotron-blog.jpg') }}" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title title-little no-decoration">Blog</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 offset-sm-2 offset-md-0 col-xs-6 offset-xs-3 text-center">
                <a href="{{ path('blog') }}">
                    <div class="card recipe-card">
                        <img class="card-img-top" src="{{ asset('assets/img/jumbotron-farmer.jpg') }}" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title title-little no-decoration">Farmers</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 offset-sm-2 offset-md-0 col-xs-6 offset-xs-3 text-center">
                <a href="{{ path('blog') }}">
                    <div class="card recipe-card">
                        <img class="card-img-top" src="{{ asset('assets/img/jumbotron-recipes.jpg') }}" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title title-little no-decoration">Eat Happy Meet</h5>
                        </div>
                    </div>
                </a>
            </div>


        </div>
    </div>

    <!-- end of the main content -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}