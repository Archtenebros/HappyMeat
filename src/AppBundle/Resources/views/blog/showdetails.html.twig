{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <img class="img-fluid" src="{{ asset(blog.image) }}" alt="{{ blog.title }}">
        <h1 class="title text-center">{{ blog.title }}</h1>
        <h5 class="text-justify">{{ blog.content }}</h5>
        <div class="post-preview">
            <h5 class="post-meta">Posted by {{ blog.author.username }} on <span>{{ blog.date.format("F jS, Y") }}</span></h5>
            {% if app.user == blog.author %}
                <a href="{{ path("edit_blog", {"id": blog.id}) }}">
                    <button type="button" class="btn btn-secondary">Modify</button>
                </a>
                <button type="button" class="btn btn-danger">Delete</button>
            {% endif %}
        </div>

    </div>
    {# nom variable : blog#}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}