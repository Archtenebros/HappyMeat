{% extends 'base.html.twig' %}

{% block title %}
    Blog
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Beginning of main content -->

    <div class="main-jumbotron-blog jumbotron jumbotron-fluid">
        <div class="container">
            <div class="col-sm-12 text-center">
                <h1 class="align-middle"><span class="text-light title">&nbsp;&nbsp; BLOG &nbsp;&nbsp;</span></h1>
            </div>
        </div>
    </div>

    <div class="container">

        <!-- DYNAMIC OBJECT: foreach post in allposts -->

        <!-- BEGIN -->
        <div class="row">
            <div class="col-sm-3">
                <!-- src of the image = post.getImg() -->
                <img class="img-fluid img-opacity" src="{{ asset('assets/img/new5.jpg') }}" alt="Organic essentials you need"/>
            </div>
            <div class="col-sm-9">
                <div class="post-preview">
                        <!-- h3.href = post.getTitle()-->
                        <h3 class="post-title">The storecupboard organic essentials you need</h3>
                        <!-- h3.href = post.getDescription()-->
                        <h3 class="post-subtitle">
                            So-called ‘grocery’ organic foods are the staples you keep...
                        </h3>
                    <!-- a.href = post.getAuthor() then p.innerHTML += post.getDate()-->
                    <p class="post-meta">Posted by <a href="#">Jimmy</a> on <span>September 24, 2018</span></p>
                </div>
                <button type="button" class="btn btn-secondary">Modify</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
        <hr class="line">
        <!-- END -->

        <a href="{{ path('add_blog') }}" class="btn btn-success btn-lg btn-block">Create a new post</a>
    </div>

    <!-- end of the main content -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}