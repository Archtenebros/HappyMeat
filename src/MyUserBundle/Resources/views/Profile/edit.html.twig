{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col-12 text-center">
            <h1>Update your user information</h1>
        </div>
        <div class="col-12 form-group text-right">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            <div class="row">
                <div class="col-sm-4">
                    <label for="fos_user_profile_form_farmer_email" class="title-little">Email</label>
                </div>
                <div class="col-sm-4 d-flex align-items-center">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label for="fos_user_profile_form_farmer_username" class="title-little">Username</label>
                </div>
                <div class="col-sm-4 d-flex align-items-center">
                    {{ form_widget(form.username) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label for="fos_user_profile_form_farmer_current_password" class="title-little">Current password</label>
                </div>
                <div class="col-sm-4 d-flex align-items-center">
                    {{ form_widget(form.current_password) }}
                </div>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <button class="btn-secondary btn" type="submit">Validate</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% if app.user is isfarmer() %}
        <div class="row">
            <div class="col-12 text-center">
                <h1>Update your farmer information</h1>
            </div>
            <div class="col-12">
                {{ render(controller('MyUserBundle\\Controller\\OwnerProfileController::editAction')) }}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}